{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build face_mesh",
			"command": "bazel",
			"args": [
				"run",
				"-c",
				"opt",
				"qoin/solution/face_mesh",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build"
		},
		{
			"type": "shell",
			"label": "build hand_tracking",
			"command": "bazel",
			"args": [
				"run",
				"-c",
				"opt",
				"qoin/solution/hand_tracking",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build"
		},
		{
			"type": "shell",
			"label": "run server",
			"command": "bazel",
			"args": [
				"run",
				"qoin/server:server",
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"GLOG_logtostderr": "1"
				}
			}
		},
		{
			"type": "shell",
			"label": "run client",
			"command": "bazel",
			"args": [
				"run",
				"qoin/server:client",
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"GLOG_logtostderr": "1"
				}
			}
		},
	]
}