{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build hand_tracking",
			"command": "bazel",
			"args": [
				"build",
				"-c",
				"opt",
				"qoin/hand_tracking",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build"
		},
		{
			"type": "shell",
			"label": "run hand_tracking",
			"command": "bazel-bin/qoin/hand_tracking/hand_tracking",
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {"GLOG_logtostderr": "1"}
			},
			"group": "build",
		},
	]
}